<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_charlie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VTH Charlie"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_1234ABC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_charlie"
                android:text="1234ABC"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="82dp"
                android:background="@android:drawable/ic_menu_save"
                android:layout_toRightOf="@id/txt_charlie"/>

            <Button
                android:id="@+id/btn_low_batery"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:drawable/ic_lock_idle_low_battery"
                android:layout_toRightOf="@id/btn_save"/>


            <Button
                android:id="@+id/btn_options"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:drawable/ic_menu_manage"
                android:layout_toRightOf="@id/btn_low_batery"/>

            <ImageView
                android:id="@+id/img_map"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_below="@id/txt_1234ABC"
                android:layout_marginTop="64dp"
                android:layout_marginLeft="64dp"
                android:background="@android:drawable/ic_menu_mapmode"/>

            <TextView
                android:id="@+id/txt_1234"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_map"
                android:text="1234"
                android:layout_below="@id/txt_1234ABC"
                android:layout_marginTop="84dp"
                android:textSize="48sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cfm"
                android:layout_toRightOf="@id/img_map"
                android:layout_below="@id/txt_1234"
                android:textSize="32sp"/>

            <HorizontalScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@android:drawable/ic_dialog_dialer"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_toRightOf="@id/img_1"
                            android:text="85"
                            android:textSize="42sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_1"
                            android:layout_marginLeft="42dp"
                            android:layout_marginTop="10dp"
                            android:text="ft/min"
                            android:textSize="18sp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@android:drawable/ic_menu_directions"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_toRightOf="@id/img_2"
                            android:text="12"
                            android:textSize="42sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_2"
                            android:layout_marginLeft="42dp"
                            android:layout_marginTop="10dp"
                            android:text="ger/mn"
                            android:textSize="18sp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@android:drawable/ic_menu_upload"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_toRightOf="@id/img_3"
                            android:text="76"
                            android:textSize="42sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_3"
                            android:layout_marginLeft="42dp"
                            android:layout_marginTop="10dp"
                            android:text="kbps"
                            android:textSize="18sp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_4"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@android:drawable/ic_menu_more"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_toRightOf="@id/img_4"
                            android:text="32"
                            android:textSize="42sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_4"
                            android:layout_marginLeft="42dp"
                            android:layout_marginTop="10dp"
                            android:text="gg/sec"
                            android:textSize="18sp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_5"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@android:drawable/ic_menu_preferences"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_toRightOf="@id/img_5"
                            android:text="48"
                            android:textSize="42sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_5"
                            android:layout_marginLeft="42dp"
                            android:layout_marginTop="10dp"
                            android:text="ps/hr"
                            android:textSize="18sp"/>

                    </RelativeLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_above="@id/scroll_view"
                android:background="@android:drawable/ic_menu_compass"/>

            <TextView
                android:id="@+id/txt_36in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_above="@id/scroll_view"
                android:text="36 in"
                android:textSize="28sp"/>

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_above="@id/scroll_view"
                android:layout_toLeftOf="@id/txt_36in"
                android:background="@android:drawable/ic_notification_clear_all"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
